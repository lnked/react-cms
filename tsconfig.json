{
    "compilerOptions": {
        "jsx": "react",
        "target": "es5",
        "module": "commonjs",
        "outDir": "dist",
        "allowJs": false,
        "sourceMap": true,
        "declaration": false,
        "removeComments": true,
        "importHelpers": true,
        "downlevelIteration": true,
        "isolatedModules": false,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "mapRoot": "./",
        "sourceRoot": "./",
        "preserveSymlinks": true,
        "allowSyntheticDefaultImports": true,
        "inlineSourceMap": false,
        "inlineSources": false,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": [
            "node",
            "jest",
            "react",
            "enzyme",
            "jest-styled-components",
            "styled-components"
        ],
        "typeRoots": [
            "typings",
            "node_modules/@types"
        ],
        "lib": [
            "es2016",
            "dom",
            "es5"
        ],

        "paths": {
            "*": ["src/*"],
            "hocs": [
                "src/hocs"
            ],
            "segments": [
                "src/segments"
            ],
            "layouts": [
                "src/layouts"
            ],
            "variables": [
                "src/variables"
            ],
            "containers": [
                "src/containers"
            ],
            "components": [
                "src/components"
            ],
            "typings": [
                "src/typings"
            ],
            "assets": [
                "src/assets"
            ],
            "utils": [
                "src/utils"
            ],
            "config": [
                "src/config"
            ],
            "styles": [
                "src/assets/styles"
            ],
            "images": [
                "src/assets/images"
            ],
            "scripts": [
                "src/assets/scripts"
            ],
            "svgstore": [
                "src/assets/svgstore"
            ]
        }
    },
    "files": [
        "typings/**/*.d.ts"
    ],
    "filesGlob": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.scss",
        "!node_modules/**/*"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "dist",
        "tests",
        "webpack",
        "typings",
        "coverage",
        "node_modules",
        "**/node_modules/*"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useCache": true,
        "useBabel": true,
        "forkChecker": true,
        "transpileOnly": false,
        "useWebpackText": true,
        "errorsAsWarnings": true,
        "useTranspileModule": true
    }
}

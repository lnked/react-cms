{
    "buildOnSave": false,
    "compileOnSave": true,
    "compilerOptions": {
        "jsx": "react",
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "allowJs": false,
        "sourceMap": true,
        "declaration": false,
        "removeComments": true,
        "importHelpers": true,
        "downlevelIteration": true,
        "isolatedModules": false,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "preserveSymlinks": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "*": [
                "node_modules/@types/*"
            ],
            "hocs": [
                "./app/hocs"
            ],
            "segments": [
                "./app/segments"
            ],
            "layouts": [
                "./app/layouts"
            ],
            "variables": [
                "./app/variables"
            ],
            "containers": [
                "./app/containers"
            ],
            "components": [
                "./app/components"
            ],
            "typings": [
                "./app/typings"
            ],
            "assets": [
                "./app/assets"
            ],
            "utils": [
                "./app/utils"
            ],
            "config": [
                "./app/config"
            ],
            "styles": [
                "./app/assets/styles"
            ],
            "images": [
                "./app/assets/images"
            ],
            "scripts": [
                "./app/assets/scripts"
            ],
            "svgstore": [
                "./app/assets/svgstore"
            ],
            "store": [
                "./app/redux/store"
            ],
            "actions": [
                "./app/redux/actions"
            ],
            "reducers": [
                "./app/redux/reducers"
            ]
        },
        "types": [
            "node",
            "jest",
            "react",
            "core-js",
            "enzyme",
            "jest-styled-components",
            "styled-components"
        ],
        "typeRoots": [
            "./typings",
            "./node_modules/@types"
        ],
        "sourceRoot": "./",
        "mapRoot": "./",
        "inlineSourceMap": false,
        "inlineSources": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "dom",
            "es5",
            "esnext",
            "es2015.core",
            "es2015.collection",
            "es2015.symbol",
            "es2015.iterable",
            "es2015.promise"
        ]
    },
    "files": [
        "./typings/json.d.ts",
        "./typings/react.d.ts"
    ],
    "filesGlob": [
        "./app/**/*.ts",
        "./app/**/*.tsx",
        "./app/**/*.scss",
        "!node_modules/**/*"
    ],
    "include": [
        "./app/**/*"
    ],
    "exclude": [
        ".git",
        "dist",
        "tests",
        "webpack",
        "typings",
        "coverage",
        "node_modules"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useCache": true,
        "useBabel": true,
        "forkChecker": true,
        "transpileOnly": false,
        "useWebpackText": true,
        "errorsAsWarnings": true,
        "useTranspileModule": true
    }
}
